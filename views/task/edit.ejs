<% include ../layout/header.ejs %>
<div class="main">
    <div class="wrapper">
        <div class="content add-task-container">
            <form method="POST" class="task-form">
                <% if(typeof task !== 'undefined') { %>
                <h2>Редагувати завдання</h2>
                <% } else { %>
                <h2>Додати завдання</h2>
                <% } %>
                <div class="form-group">
                    <label for="title">Назва</label>
                    <input type="text" id="task-title" name="task-title"
                        value="<%=typeof task !== 'undefined' ? task.title : '' %>">
                </div>
                <div class="form-group">
                    <label for="text">Текст</label>
                    <textarea id="task-body"
                        name="task-body"><%=typeof task !== 'undefined' ? task.body : '' %></textarea>
                </div>
                <input type="hidden" id="task-id" value="<%=typeof task !== 'undefined' ? task.id : '' %>">
                <button class="publish-button">Опублікувати</button>
            </form>
        </div>
        <% include ../layout/sidebar.ejs %>
    </div>
</div>
<% include ../layout/footer.ejs %>